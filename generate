#!/usr/bin/env node

const fs = require('fs')

const w = 28
const h = 8

const prefix = `<samp>`
const suffix = `</samp>`

const lines = []

for (let y = 0; y < h; y++) {
  let line = ''
  for (let x = 0; x < w; x++) {
    line = line.concat(Math.random() < 0.2 ? 'âœ¨' : '&nbsp;')
  }
  lines.push(line)
}

let output = ''

for (let line of lines) {
  output = output.concat(line).concat('<br/>')
}

output = prefix + output + suffix

fs.writeFileSync('README.md', output)
